if schoolInfo.code !== 'FKLXDD'
   div(class="rightMode",id="rightBooks")
      div(class="rightMode_robot")
         img(src="#{host}/images/v5template/jiqiren2.gif")
      div(class="v3rightMode_book",sCode="#{schoolInfo.code}")
         div(class="v3rightMode_book01")
            img(class="v3rightMode_btn01",src="#{host}#{sidebarBookImg}")
            span(class="v3rightMode_btn01Msg") 招录公告
         div(class="v3rightMode_book02")
            img(class="v3rightMode_btn02",src="#{host}#{sidebarBookImg}")
            span(class="v3rightMode_btn02Msg") 视频在线
         div(class="v3rightMode_book03")
            img(class="v3rightMode_btn03",src="#{host}#{sidebarBookImg}")
            span(class="v3rightMode_btn03Msg") 校园风采
script.
   // 招录公告
   $(".v3rightMode_btn01Msg").click(function(){
      var sCode = $(".v3rightMode_book").attr('sCode');
      var url = getAppServer() + '/page/notice/' + sCode+"?curPage=1&pageSize=10";
      window.location.href = toDetailPage(url);
   })
   // 视频在线跳转
   $(".v3rightMode_btn02Msg").click(function(){
      var sCode = $(".v3rightMode_book").attr('sCode');
      var url = getAppServer() + '/page/video/' + sCode;
      window.location.href = toDetailPage(url);
   })
   // 校园风采
   $(".v3rightMode_btn03Msg").click(function(){
      var sCode = $(".v3rightMode_book").attr('sCode');
      var url = getAppServer() + '/page/photo/' + sCode;
      window.location.href = toDetailPage(url);
   })


   function addEvent(elem, event, fn) {
      if (elem.addEventListener) {
         elem.addEventListener(event, fn, false);
      } else if (elem.attachEvent) {
         elem.attachEvent('on' + event, fn);
      } else {
         elem['on' + event] = fn;
      }
   }
   //右侧机器人浮动
   $(function(){
      addEvent(window, 'scroll', function () {
         var scrollTop = document.body.scrollTop || document.documentElement.scrollTop;
         if (scrollTop > 110) {
            $('#rightBooks').addClass('fix');
            var windowWidth = window.offsetWidth || document.body.clientWidth;
            if (windowWidth > 1200) {
               var left = (windowWidth - 1200) / 2 + 230 + 820;
               $('#rightBooks').css('left', left + 'px');
            } else {
               var scrollLeft = document.body.scrollLeft || document.documentElement.scrollLeft;
               $('#rightBooks').css('left', '');
               var right = (-1) * (1200 - windowWidth - scrollLeft)
               $('#rightBooks').css('right', right + 'px');
            }

         } else {
            $('#rightBooks').removeClass('fix');
         }
      })

   })