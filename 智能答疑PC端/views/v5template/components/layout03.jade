                block content

        script.

            var styleColor = "#{schoolInfo.style}";
            $('body').attr('id', styleColor);
            function getAppServer() {
                return "";
            }
            function getApiServer() {
                return '!{locals.global.api_sever_url}'
            }
            // 机器人
            function getRobotServer(){
                return '!{locals.global.robot_sever_url}'
            }

            // 跳转页面，统一处理参数
            function toDetailPage(url){
                if(sessionStorage.getItem("spreadToken")) {
                    if(url.indexOf("?") > -1) {
                        url += "&spreadToken="+sessionStorage.getItem("spreadToken");
                    }else{
                        url += "?spreadToken="+sessionStorage.getItem("spreadToken");
                    }
                }
                return url;
            }


            var sCode = $(".header_container").attr('sCode');


            // 机器人登录按钮
            var objWin = null;
            var themeColor ="#{themeColor}";

            if(localStorage.needOpen == "1"){
                var userId = $(".fast_login_msg").attr('id');
                if(userId){
                    var username = $(".fast_login_msg").html();
                    var sCode  = $(".header_container").attr('sCode');
                    var scodename = "#{schoolInfo.name}";
                    localStorage.needOpen = "";
                    var url =getRobotServer()+"/users?"+'id='+userId+'&name='+username+'&sCode='+sCode +'&school='+scodename;
                    if (objWin == null || objWin.closed) {
                        objWin = window.open(url,
                                'newwindow',
                                'height=700, width=900, top=20, left=150, toolbar=no, menubar=no, scrollbars=no, resizable=no, location=no, status=no');
                        if (objWin == null || typeof(objWin) == 'undefined') {
                            alert("智能机器人聊天窗口被浏览器阻止，请点击允许弹出窗口");
                        }
                    } else {
                        objWin.focus();
                    }
                }
            }

            // 点击首页的学校logo 部分跳转到首页
            $(".header_left").click(function(){
                var identify = $(".header_content").attr('identify');
                var url = getAppServer() + "/" + identify;
                window.location.href = toDetailPage(url);
            });



            $(".fast_login_personal").hover(function(){
                $(this).css("color",themeColor);
            },function(){
                $(this).css("color","#000000");
            })

            // 自定义鼠标划过样式
            $(".SignUp").hover(function(){
                $(this).find("a").css("color",themeColor);
                $(this).find("span").css("color", themeColor);
                $(this).find("i").css("color",themeColor);
            },function(){
                $(this).find("a").css("color","#000000");
                $(this).find("span").css("color", "#000000");
                $(this).find("i").css("color","#000000");
            })
            // 移动版鼠标划过样式
            $(".mobile").hover(function(){
                $(this).find("span").css("color", themeColor);
                $(this).find("i").css("color",themeColor);
            },function(){
                $(this).find("span").css("color", "#000000");
                $(this).find("i").css("color","#000000");
            })

            // 点击首页的移动版出现二维码
            $(".mobile").hover(function(){
                $(".mobile_code_img").show();
            },function(){
                $(".mobile_code_img").hide();

            });
            document.onkeydown = function (e) {
                var theEvent = window.event || e;
                //获取键盘上当前按下的键
                var code = theEvent.keyCode || theEvent.which;
                if (code == 13) {
                    //这里调用上面给button添加点击登录事件方法
                    $(".search_btn").click();
                }
            }





            $(function(){
                // 返回顶部
                $('#toTop').click(function(){
                    $('html,body').animate({scrollTop: 0}, 500);
                })

                window.addEventListener('scroll',function(){
                    var scrollTop = document.body.scrollTop || document.documentElement.scrollTop;
                    if (scrollTop > 110) {
                        $('#toTop').show();
                    } else {
                        $('#toTop').hide();
                    }
                })

                // 设置, 点击空白处, 隐藏所有二级下拉菜单
                var themeColor ="#{themeColor}";


                // 一级导航栏点击事件 出现二级下拉菜单
                $(".nav_first_items_tips").mouseenter(function () {
                    //$(document).unbind('click');
                    $(this).addClass("on").siblings().removeClass("on");
                    $(".home_nav_first_items_tips a").removeClass("active");
                    //$(".nav_second_items a.nav_second_items_list").css("background",themeColor);
                    var THIS = this;
                    $(".nav_first_items_tips").each(function () {
                        // 不是当前的, 全部隐藏
                        if (this != THIS) {
                            $(this).parent().find('.nav_second_items').hide();
                        } else {
                            var display = $(this).css('display') == 'block';
                            if (display) {
                                $(this).parent().find('.nav_second_items').hide();
                            } else {
                                $(this).parent().find('.nav_second_items').show();
                                $(this).parent().find('nav_second_items_list').show();
                                //setTapHiddenList();
                            }
                        }
                    });
                });
                $(".nav_container").mouseleave(function () {
                    $(this).parent().find('.nav_second_items').hide();
                    $(".home_nav_first_items_tips a").addClass("active");
                });
                // 二级页面导航栏一级分类下拉二级分类点击事件
                $(".nav_second_items_list").click(function () {
                    var currentId = $(this).attr('id');
                    var parentId = $(this).parent().parent().parent().attr('catId');
                    var refUrl = $(this).attr('refUrl');
                    var ntype = $(this).attr('ntype');

                    // 点击下拉框中的各项分类信息,跳转到二级页面
                    if (ntype == '0') {
                        //跳转到文章列表
                        var parentId = $(this).attr('id');
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/list/' + sCode + "/" + parentId + "?curPage=1&pageSize=10";
                        window.location.href = toDetailPage(url);
                    } else if (ntype == "1") {
                        //调转到文章详情
                        var sCode = $(".header_container").attr('sCode');
                        var infoId = $(this).parent().find(".nav_second_items_list").attr('id');
                        var parentId = $(this).parent().parent().parent().attr('catId');
                        var url = getAppServer() + '/page/detail/' + sCode + "/" + infoId + "/" + parentId;
                        window.location.href = toDetailPage(url);
                    } else if (ntype == "2") {
                        var url = refUrl;
                        window.location.href = toDetailPage(url);
                    } else if(ntype == "3"){
                        // 跳转到 校园风采
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/photo/' + sCode;
                        window.location.href = toDetailPage(url);
                    } else if(ntype =="4"){
                        // 跳转到 视频在线
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/video/' + sCode;
                        window.location.href = toDetailPage(url);
                    }
                })

                // 二级页面导航栏 一级分类点击事件
                $(".nav_first_items_tips").click(function(){
                    var parentId = $(this).parent().attr('catId');
                    var ntype = $(this).parent().attr('ntype');
                    var refUrl = $(this).parent().attr('refUrl');
                    // 点击二级页面导航栏,跳转到二级页面
                    if (ntype == '0') {
                        //跳转到文章列表
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/list/' + sCode + "/" + parentId + "?curPage=1&pageSize=10";
                        window.location.href = toDetailPage(url);
                    } else if (ntype == "1") {
                        return;
                    } else if (ntype == "2") {
                        var url = refUrl;
                        window.location.href = toDetailPage(url);
                    } else if(ntype == "3"){
                        // 跳转到 校园风采
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/photo/' + sCode;
                        window.location.href = toDetailPage(url);
                    } else if(ntype =="4"){
                        // 跳转到 视频在线
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/video/' + sCode;
                        window.location.href = toDetailPage(url);
                    }

                })













                    // 点击个人昵称到个人资料页面.需要sCode和userId两个参数
                var goPersonal= $(".fast_login_msg01").html();
                if(goPersonal == "快捷登录"){
                    $(".fast_login_msg01").click(function(){
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/login/' + sCode;
                        window.location.href = toDetailPage(url);
                    })
                }else{
                    $(".fast_login_personal").click(function () {
                        var userId = $(this).attr('id');
                        var sCode = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/personal/' + sCode;
                        window.location.href = toDetailPage(url);
                    })
                }


                // 鼠标滑过个人昵称.出现下列菜单
                $(".fast_login_personal").hover(function () {
                    var themeColor = "#{themeColor}";
                    $(".personal_home").show();
                    $(".personal_home ul li").find("a").css("color", "#ffffff");
                    $(".personal_home ul li").find("span").css("color", "#ffffff");
                    $(this).find(".fast_login_msg").css("color", themeColor);
                })
                $(".home_login_personal").mouseleave(function () {
                    $(".personal_home").hide();
                    $(".fast_login_personal span").css("color", "#000000");
                })
                $(".personal_home_content li").hover(function () {
                    $(this).find("a").css("color", themeColor);
                }, function () {
                    $(this).find("a").css("color", "#ffffff");
                    $(".personal_home ul li").find("span").css("color", "#ffffff");
                })


                // 免费注册和快捷登录鼠标划过样式
                $(".fast_login,.fast_register").hover(function () {
                    $(this).css("color", themeColor);
                }, function () {
                    $(this).css("color", "#000000");
                })

                // 点击我的资料 跳转到我的资料页面  16
                $(".my_personalFile").click(function(){
                    var sCode = $(".header_container").attr('sCode');
                    var url = getAppServer() + '/page/personal/' + sCode;
                    window.location.href = toDetailPage(url);
                })
                // 点击 招办回复 跳转到消息列表页面  15
                $(".my_messageList").click(function(){
                    var sCode = $(".header_container").attr('sCode');
                    var url = getAppServer() + '/page/message/' + sCode;
                    window.location.href = toDetailPage(url);
                })
                // 点击 在线留言 跳转到在线留言页面 14
                $(".my_onlineMessage").click(function(){
                    var sCode = $(".header_container").attr('sCode');
                    var url = getAppServer() + '/page/online/' + sCode;
                    window.location.href = toDetailPage(url);
                })
                // 点击 退出登录 清空缓存
                $(".my_loginOut").click(function(){
                    var identify = $(".header_content").attr('identify');
                    var url = getAppServer() + "/v5users/logOut?"+ "identify=" + identify;
                    window.location.href = toDetailPage(url);
                })
                // 点击首页文字跳转到首页
                $(".home_nav_first_items_tips").click(function () {
                    var identify = $(".header_content").attr('identify');
                    var url = getAppServer() + "/" + identify;
                    window.location.href = toDetailPage(url);
                })
                // 点击免费注册跳转到注册页面
                $(".fast_register").click(function(){
                    var sCode = $(".header_container").attr('sCode');
                    var url = getAppServer() + '/page/register/' + sCode;
                    window.location.href = toDetailPage(url);
                })



                // 搜索框输入后跳转新页面事件
                $(".search_btn").click(function(){
                    var sCode = $(".header_container").attr('sCode');
                    var parentId = $(this).parent().attr('catId');
                    var question = $(".search_msg").val();
                    if(!question && question.length == 0){
                        return;
                    }
                    var url = getAppServer() + '/page/search/' + sCode + "/" + parentId + "/" + question+"?curPage=1&pageSize=10";
                    url = encodeURI(url);
                    window.location.href = toDetailPage(url);
                })

                // 前端加入统计代码
                // 用户省份
                var userProvince = remote_ip_info.province;
                // 用户城市
                var userCity = remote_ip_info.city;
                // 学校唯一标识
                var sCode = $(".header_container").attr('sCode');
                // 用户token
                var userToken = $(".fast_login_msg").attr('userToken');
                // 访问来源
                var viewSourceUrl = sessionStorage.getItem('viewSourceUrl') ? sessionStorage.getItem('viewSourceUrl') : document.referrer;
                sessionStorage.setItem('viewSourceUrl', viewSourceUrl);
                // 当前页面 url
                var pageUrl = location.href;
                $.ajax({
                    type: "post",
                    url: getApiServer() + "/front/addUserViewLog",
                    data: {
                        'userToken': userToken,
                        'userProvince': userProvince,
                        'userCity': userCity,
                        'sCode': sCode,
                        'viewSourceUrl':viewSourceUrl,
                        'pageUrl':pageUrl
                    },
                    success: function (data) {
                        if (data && data.code == '000000') {
                            return;
                        } else {
                            return;
                        }
                    }
                })
                //用户宣传检测获取地址栏的userToken
                // 获取地址栏参数
                function GetQueryString(name) {
                    var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
                    var r = window.location.search.substr(1).match(reg);
                    if (r != null)return unescape(r[2]);
                    return null;
                }


                function getSpreadToken() {
                    var frontUserId = $('.fast_login_msg').attr('userid') && $('.fast_login_msg').attr('userid') != '' ? $('.fast_login_msg').attr('userid') : $('.fast-login-msg').attr('userid');
                    var sCode = $(".header_container").attr('sCode');
                    $.ajax({
                        url : getApiServer() + '/front/spread/getSpreaderByUserId',
                        data:{'frontUserId':frontUserId,'sCode':sCode},
                        type : "POST",
                        dataType : 'json',
                        success : function (res){
                            var spreadToken = GetQueryString("spreadToken");
                            var userToken = GetQueryString("userToken");
                            if(res.code == '000000' && !res.data && spreadToken){
                                $.ajax({
                                    type: "get",
                                    url: getApiServer() + "/front/spread/bindUserAndSpread",
                                    data: {
                                        'spreadToken': spreadToken,
                                        'userToken':userToken,
                                        'frontUserId': frontUserId
                                    },
                                    success: function (res) {
                                        if (res && res.code == '000000') {
                                            sessionStorage.setItem('spreadToken', res.data?res.data:'');
                                        }
                                    }
                                })
                            }else {
                                sessionStorage.setItem('spreadToken', res.data?res.data:'');
                            }
                        }
                    });
                }
                getSpreadToken();









                $(".rightMode_robot").click(function(){
                    // 判断是否已登录
                    var userId = $(".fast_login_msg").attr('id');
                    if (userId && userId.length > 0){
                        var userId = $(".fast_login_msg").attr('id');
                        var username = $(".fast_login_msg").html();
                        var sCode  = $(".header_container").attr('sCode');
                        var scodename = "#{schoolInfo.name}";
                        var url =getRobotServer()+"/users?"+'id='+userId+'&name='+username+'&sCode='+sCode +'&school='+scodename;
                        if (objWin == null || objWin.closed) {
                            objWin = window.open(url,
                                    'newwindow',
                                    'height=700, width=900, top=20, left=150, toolbar=no, menubar=no, scrollbars=no, resizable=no, location=no, status=no');
                            if (objWin == null || typeof(objWin) == 'undefined') {
                                alert("智能机器人聊天窗口被浏览器阻止，请点击允许弹出窗口")
                                ;
                            }
                        } else {
                            objWin.focus();
                        }
                    }else{
                        localStorage.needOpen = 1;
                        var sCode  = $(".header_container").attr('sCode');
                        var url = getAppServer() + '/page/login/' + sCode;
                        window.location.href = toDetailPage(url);
                    }

                })




            });
















