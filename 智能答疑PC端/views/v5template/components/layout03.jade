    body
        div(class="wrapper",style="min-width:1200px;")
            div(class="main_container themeBlue")
                // 返回顶部
                div(id="toTop")
                    img(src="/images/v4template/backtop.png")
                //头部导航栏
                div(class="header_container",sCode="#{schoolInfo.code}")
                    div(class="header_content",identify="#{schoolInfo.identify}")
                        //导航栏左边蓝色部分
                        div(class="header_half_left")
                            div(class="header_left")
                                img(class="header_left_school",src="#{host}#{navBgImg}")
                                img(class="header_logo",src="#{locals.global.img_sever_url}#{schoolInfo.logoUrl}")
                                span #{schoolInfo.professor}
                            div(class="af_10",style="background:#{themeColor}")
                        //导航栏右边白色部分
                        div(class="header_half_right")
                            div(class="header_right")
                                div(class="header_msg")
